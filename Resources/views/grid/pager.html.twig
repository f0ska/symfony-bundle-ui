{% set infoPages = manager.infoPages %}
{% if infoPages|length %}
<div class="row">
    <div class="col-xs-12 col-md-7" >
        <nav aria-label="Page Navigation">
            <ul class="pagination pagination-sm justify-content-center justify-content-md-start">
{% for infoPage in infoPages %}
                <li class="page-item {% if infoPage.active %}active{% endif %} {% if infoPage.disabled %}disabled{% endif %}"><a class="page-link" href="{{ infoPage.url }}">{{ infoPage.name }}</a></li>
{% endfor %}
            </ul>
        </nav>
    </div>
    <div class="col-xs-12 col-md-5">
        <nav aria-label="page Length">
            <ul class="pagination pagination-sm justify-content-center justify-content-md-end">
{% for value in manager.definition.pager.lengths %}
                <li class="page-item {% if value == manager.request.pageLength %}active{% endif %}"><a class="page-link" href="{{ manager.getPageLengthUrl(value) }}">{{ value }}</a></li>
{% endfor %}
            </ul>
        </nav>
    </div>
</div>
{% endif %}

