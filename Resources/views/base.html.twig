<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block header_title %}{% endblock %}</title>
{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/bundles/bootstrap/css/bootstrap.css')}}" >
        <link rel="stylesheet" href="{{ asset('/bundles/fontawesome/css/all.css')}}" >
        <link rel="stylesheet" href="{{ asset('/bundles/spipuui/css/spipu-ui.css') }}" >
{% endblock %}
    </head>
    <body>

{% include '@SpipuUi/menu.html.twig' with {'currentItem': menuCurrentItem|default('')} %}

        <main role="main" class="{% block main_class %}container{% endblock %}">
            {% apply spaceless %}{% if app.request.hasPreviousSession %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
            {% endif %}{% endapply %}

            <div class="row">
                <div class="col-xs-12 col-lg-6"><h1>{% block main_title %}{% endblock %}</h1></div>
                <div class="col-xs-12 col-lg-6 pt-2 pb-1 text-right">{% apply spaceless %}{% block main_actions %}{% endblock %}{% endapply %}</div>
            </div>

            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <div class="container">
                <span class="text-muted">{% block footer %}&copy; {{ "now"|date("Y") }} - Spipu{%  endblock %}</span>
            </div>
        </footer>

{% block javascripts %}
        <script src="{{ asset('/bundles/jquery/js/jquery.js') }}"></script>
        <script src="{{ asset('/bundles/popper/js/popper.js') }}"></script>
        <script src="{{ asset('/bundles/bootstrap/js/bootstrap.js') }}"></script>
        <script src="{{ asset('/bundles/spipuui/js/spipu-ui.js') }}"></script>
{% endblock %}
    </body>
</html>