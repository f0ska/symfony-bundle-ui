{% macro bytesToSize(bytes) %}
{% apply spaceless %}
    {% set kilobyte = 1024 %}
    {% set megabyte = kilobyte * 1024 %}
    {% set gigabyte = megabyte * 1024 %}
    {% set terabyte = gigabyte * 1024 %}

    {% if bytes < kilobyte * 1.2 %}
        {{ bytes ~ ' o' }}
    {% elseif bytes < megabyte * 1.2 %}
        {{ (bytes / kilobyte)|number_format(2, '.', '') ~ ' Ko' }}
    {% elseif bytes < gigabyte * 1.2 %}
        {{ (bytes / megabyte)|number_format(2, '.', '') ~ ' Mo' }}
    {% elseif bytes < terabyte * 1.2 %}
        {{ (bytes / gigabyte)|number_format(2, '.', '') ~ ' Go' }}
    {% else %}
        {{ (bytes / terabyte)|number_format(2, '.', '') ~ ' To' }}
    {% endif %}
{% endapply %}
{% endmacro %}
